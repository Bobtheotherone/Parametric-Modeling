{
  "version": 2,
  "limits": {
    "max_calls_per_agent": 15,
    "quota_retry_attempts": 5,
    "max_total_calls": 150,
    "max_json_correction_attempts": 3
  },
  "fallback_order": ["codex", "claude", "gemini"],
  "agents": {
    "codex": {
      "script": "bridge/agents/codex.sh",
      "role": "implementer",
      "supports_write_access": true,
      "quota_error_patterns": ["insufficient_quota", "exceeded your current quota", "rate limit"]
    },
    "gemini": {
      "script": "bridge/agents/gemini.sh",
      "role": "spec_engineer",
      "supports_write_access": false,
      "quota_error_patterns": ["TerminalQuotaError", "exhausted your capacity", "quota"]
    },
    "claude": {
      "script": "bridge/agents/claude.sh",
      "role": "verifier",
      "supports_write_access": true,
      "quota_error_patterns": ["rate_limit", "insufficient_quota", "overloaded"]
    }
  }
}
